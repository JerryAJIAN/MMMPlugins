<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataViewerPlugin" x:Class="DataViewerPlugin.DataViewerView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:DataViewerViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <HierarchicalDataTemplate DataType="{x:Type local:BoneViewModel}" ItemsSource="{Binding Children}">
            <StackPanel>
                <TextBlock Text="{Binding Label}" />
                <TextBlock Text="{Binding Move}" />
                <TextBlock Text="{Binding Rotation}" />
            </StackPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type local:ObjectViewModel}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Label}" />
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Border Margin="4" BorderBrush="DarkGray" BorderThickness="1">
        <TreeView ItemsSource="{Binding Root}" />
    </Border>
</UserControl>
